<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="
        d-flex
        flex-wrap
        align-items-center
        justify-content-center justify-content-md-between
        py-3
        mb-4
        border-bottom
        bg-dark
      ">
        <a href="#"
           class="
          d-flex
          align-items-center
          col-md-3
          mb-2 mb-md-0
          ms-4
          text-light text-decoration-none
             h4
        "
           onclick="location.href = '@Url.Action("Index", "Home")';">
            Kütüphane Otomasyonu
        </a>

        <ul class="nav col-12 col-md-auto justify-content-center">
            <li><a href="#" class="nav-link px-2 link-light" onclick="location.href = '@Url.Action("Uyeler", "Home")';">Üyeler</a></li>
            <li><a href="#" class="nav-link px-2 link-light" onclick="location.href = '@Url.Action("Kitaplar", "Home")';">Kitaplar</a></li>
            <li><a href="#" class="nav-link px-2 link-light" onclick="location.href = '@Url.Action("Hareketler", "Home")';">Hareketler</a></li>
        </ul>

        <div class="col-md-2 col-md-auto text-end">
            <p class="text-light mb-0">v0.1</p>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
